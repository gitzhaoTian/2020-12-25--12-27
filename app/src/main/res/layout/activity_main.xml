<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rg_main"
        android:id="@+id/vp_main"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:id="@+id/rg_main"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:checked="true"
            android:id="@+id/rb_home"
            android:drawableTop="@drawable/sele_home"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="专题"
            android:drawableTop="@drawable/sele_special"
            android:id="@+id/rb_title"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="分类"
            android:drawableTop="@drawable/sele_widgets"
            android:id="@+id/rb_widgets"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="购物车"
            android:drawableTop="@drawable/sele_shop"
            android:id="@+id/rb_shop"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"
            android:drawableTop="@drawable/sele_people"
            android:id="@+id/rb_people"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>