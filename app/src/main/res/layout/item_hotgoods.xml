<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________________"
        android:id="@+id/tv"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv"
        android:layout_margin="20dp"
        android:id="@+id/iv_list_pic_url"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_list_pic_url"
        android:layout_toRightOf="@id/iv_list_pic_url"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_list_pic_url"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginBottom="20dp"
        android:textColor="#FF003B"
        android:id="@+id/tv_price"
        />
</RelativeLayout>